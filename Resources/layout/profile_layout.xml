
<android.support.percent.PercentRelativeLayout
    android:id="@+id/mainRlayout"
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#ffffff">
 

    <TextView
        android:id="@+id/lblEMpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:gravity="center"
    android:textSize="20sp"/>

     <android.support.v7.widget.CardView
       
         android:layout_width="match_parent"
         android:layout_height="200dp"
                 app:layout_heightPercent="40%"
        android:fitsSystemWindows="true"
               app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
            >

        <RelativeLayout
       
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/TitleYnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text=" Ynote"

                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:textColor="#303030"
            android:textSize="40sp"/>
            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"
                >

             <Button
                android:id="@+id/btnSearchBottom"
                android:layout_width="35dp"
                android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="6dp"
        android:textSize="15sp"
                    
        
                android:background="@drawable/btnsettings_bck"
                android:drawableLeft = "@drawable/edit_none"/>
            <EditText
                  android:id="@+id/inputSearchProfile"
                
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Search by #tagname,note or title"
                android:paddingLeft="10dp"
            android:textColor="#c1c1c1"
                    android:textColorHint="#c1c1c1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="90dp"
                android:gravity="center|left"
                android:background="@drawable/roundinput"
                android:backgroundTint="#fafafa"
            android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="Important"
                android:textStyle="bold"
                android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                android:layout_marginTop="70dp"/>


                   
                </RelativeLayout>

          
    </RelativeLayout>

                  </android.support.v7.widget.CardView>
      <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/middLinear"
                 app:layout_marginTopPercent="35%"
        > 
       
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_marginTop="76dp"
               >
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="Notes"
                android:textColor="#000000"

        android:layout_alignParentLeft="true"
        android:textSize="19sp"
        
        android:fontFamily="sans-serif-condensed"
       android:textStyle="bold"
        android:layout_marginLeft="10dp"
    android:gravity="center|left"
        
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="Based on recently added"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textColor="#c1c1c1"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="10dp"
    android:gravity="center|left"
                   android:layout_marginTop="20dp"
             
        
    />


    
     <TextView
                android:id="@+id/btnShowAll"
                  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:autoLink="all"
        android:gravity="center"
        android:text="Show All"
                  
        android:textColor="#11998e"
         android:selectAllOnFocus="false"
          android:linksClickable="false"
         android:textAllCaps="false"
                android:textSize="15sp"
        style="@android:style/Widget.Material.Button.Borderless"
            />
            
 </RelativeLayout>
        </LinearLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
       app:layout_marginTopPercent="16%"
      app:layout_heightPercent="31%"
            android:layout_marginRight="2dp"

        >

     <android.support.design.internal.FlowLayout
     
         android:layout_width="match_parent"
         android:layout_height="180dp"
    android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
    android:id="@+id/LastLinearNote"
        app:itemSpacing="1dp"
        app:lineSpacing="1dp"
            android:scrollbarSize="0dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
            
        >


     
       



        </android.support.design.internal.FlowLayout>
       </HorizontalScrollView>
        </android.support.percent.PercentRelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
               app:layout_marginTopPercent = "54%"
>
     <ScrollView
               
        android:id="@+id/scrollProfileNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_heightPercent = "52%"
        android:layout_marginRight="0dp"
        android:layout_marginTop="370dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        >
  
    <android.support.percent.PercentRelativeLayout
       
        android:layout_width="match_parent"
        android:layout_height="match_parent"
               
            >
           
    <LinearLayout
        
      
         
           
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ProfileLinearNotes"
               android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
        android:background="#ffffff"
               
            android:layout_gravity="center|top"
        >
         
      
      </LinearLayout>

        </android.support.percent.PercentRelativeLayout>


        </ScrollView>
                                </android.support.v4.widget.SwipeRefreshLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
    android:layout_alignParentBottom="true"
        android:gravity="center"
        
        android:layout_marginBottom="10dp"
   >
    <Button
               android:id="@+id/btnNewNote"
                android:layout_width="50dp"
                android:layout_height="50dp"
        android:text="+"
            android:elevation="15dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
        android:textColor="#ffffff"
        android:fontFamily="monospace"
        android:textSize="35sp"
                android:background="@drawable/btnsignin"
            />
        </LinearLayout>
    
 
    
</android.support.percent.PercentRelativeLayout>