
<LinearLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/newnotelinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#f5f5f5"
            >
            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/btnbacktoprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@drawable/insidebuttons"
           android:drawableLeft="@drawable/abc_ic_ab_back_material"
            android:paddingLeft="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
            android:stateListAnimator="@null"

                    android:drawableTint="#909090"
       

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Posting a new note"
                    android:textColor="#909090"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="16dp"
            />
                
                <Button
                    android:id="@+id/btnPostPrivateNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                  android:textColor="#505050"

                    android:enabled="false"
                    android:textAllCaps="false"
                android:background="@drawable/insidebuttons"
                    android:stateListAnimator="@null"
                    android:layout_alignParentRight="true"

                />
                  <Button
                    android:id="@+id/btnRecordingAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Record"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="95dp"
                    android:drawableLeft="@drawable/icon_mic"
                android:background="@drawable/insidebuttons"
                    android:stateListAnimator="@null"
                    android:layout_alignParentRight="true"
                    android:textColor="#505050"
                    

                />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
<Space
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
            
    >
        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#f5f5f5">
      
            <RelativeLayout
               android:id="@+id/RlayoutNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                    
                >

      <EditText
                    android:id="@+id/noteTitle"
                    android:inputType="textMultiLine|textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="5dp"
                    android:gravity="top|start"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="#909090"
        android:background="@drawable/roundinput"
                    android:backgroundTint="#ffffff"
                   android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
       android:hint="Title"
        android:textColor="#202020"/>







             <EditText
                    android:id="@+id/privatenotetext"
                    android:inputType="textMultiLine|textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="47dp"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:gravity="top|start"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                       
                    android:textColorHint="#909090"
        android:background="@drawable/roundinput"
                    android:backgroundTint="#ffffff"
                    
       android:hint="Write something you would like to save"
        android:textColor="#202020" />
             
    
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                android:layout_alignParentTop="true"
                    android:layout_marginTop="450dp"
                    android:background="#50c1c1c1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                />
               
                  
              

               
                <EditText
                    android:id="@+id/txtPrivateNoteTagName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Tag/Category"
                    android:gravity="center"
                android:layout_alignParentLeft="true"
                    android:layout_marginRight="50dp"
                android:background="@drawable/roundinput"
                    android:textSize="15sp"
                android:layout_marginTop="460dp"
                    android:textColorHint="#909090"
                    android:textColor="#202020"
                    android:backgroundTint="#ffffff"
                android:layout_marginLeft="50dp"
                />
                
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Pick a Color"
                    android:textColor="#c1c1c1"
                    android:visibility="invisible"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="20dp"/>

              
               


                <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="600dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:id= "@+id/linearColors"
                >
                    <Button
                        android:id="@+id/btncolor8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                    android:background="@drawable/insidebuttons"
                        android:backgroundTint="#3D1054"
                    />

                    <Button
            android:id="@+id/btncolor9"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
android:background="@drawable/insidebuttons"
                        android:backgroundTint="#FC1E50"                    />
                     <Button
              android:id="@+id/btncolor10"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
android:background="@drawable/insidebuttons"
                        android:backgroundTint="#FAD961"                    />
                     <Button
                  android:id="@+id/btncolor11"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                    android:background="@drawable/insidebuttons"
                        android:backgroundTint="#623FD0"
                    />
                     
                     
                     
                </LinearLayout>
















                                <EditText
                    android:inputType="textNoSuggestions"
                    android:id="@+id/PrivateNoteBorderColor"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:hint="Hex color"
                    android:textColor="#000000"
                    android:text="#f5f5f5"
                    android:gravity="center"
                  android:visibility="invisible"
                    android:digits="abcdefgh0123456789#"
                android:layout_alignParentLeft="true"
                android:background="#f5f5f5"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="75dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Custom:"
                                      android:visibility="invisible"

                android:layout_marginTop="455dp"
                android:layout_marginLeft="15dp"/>
                <CheckBox
                    android:id="@+id/chkImportant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text = "Mark as Important"
                        
                android:buttonTint="#404040"
                    
                android:checked="false"                
                    android:textSize="16sp"
                    android:textColor="#404040"
                    android:layout_marginTop="570dp"
                    android:layout_marginLeft="110dp"/>
                <EditText
                    android:id="@+id/notePassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                android:layout_marginTop="515dp"
                    android:hint="Set password(optional)"
                    android:gravity="center"
              android:textColorHint="#909090"
                    android:textColor="#202020"
                    android:textSize = "14sp"
                    android:backgroundTint="#ffffff"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                android:background="@drawable/roundinput"
                android:layout_alignParentLeft="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    </ScrollView>















</LinearLayout>