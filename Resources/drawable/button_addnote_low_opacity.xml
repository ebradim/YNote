<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="35dip" />
      <gradient android:angle="90" android:startColor="#500dbfb1"      android:endColor="#5034fa7f"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="35dip" />
      <solid android:color="#5038ef7d"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="35dip" />
      <gradient android:angle="90" android:startColor="#5011998e" android:endColor="#5038ef7d" />
    </shape>
  </item>

</selector>