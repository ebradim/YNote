      <gradient android:angle="45" android:startColor="#353535" android:endColor="#353535"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <solid android:color="#252525"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      
      <gradient android:angle="45" android:startColor="#303030" android:endColor="#303030" />
    </shape>
  </item>

</selector>